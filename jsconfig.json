{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "jsx": "preserve",
        "allowJs": true,
        "checkJs": false
    },
    "include": [
        "resources/js/**/*.js",
        "resources/js/**/*.jsx"
    ],
    "exclude": ["node_modules"]
} 